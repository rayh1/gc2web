---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header class="flex flex-wrap sm:justify-start sm:flex-nowrap z-50 w-full bg-white py-4">
  <nav class="max-w-[85rem] w-full mx-auto px-4 sm:flex sm:items-center sm:justify-between" aria-label="Global">
    <a class="flex-none text-xl font-semibold text-gray-600" href="/">{SITE_TITLE}</a>
    <div class="flex flex-row items-center gap-5 mt-5 sm:justify-end sm:mt-0 sm:pl-5">
      <HeaderLink href="/blog">Posts</HeaderLink>
      <HeaderLink href="/tags">Tags</HeaderLink>
      <HeaderLink href="/search">Search</HeaderLink>
    </div>
  </nav>
</header>